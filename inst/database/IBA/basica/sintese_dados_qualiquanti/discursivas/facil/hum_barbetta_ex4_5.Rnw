latex(tabEM,
      caption="Tabela de distribuição de frequência para o Departamento de Engenharia Mecânica")
@
 \item[b)]
<<echo=F, results=tex>>=
tabHI <- fdt(dad[,2])
latex(tabHI,
      caption="Tabela de distribuição de frequência para o Departamento de História")
@

\item[c)] \Sexpr{solutions[3]}
\item[d)] \Sexpr{solutions[4]}
\item[e)] \Sexpr{solutions[5]}
\end{itemize}


